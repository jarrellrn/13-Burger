<header class="border-section">
    <img src="assets/img/burger.png" style="height: 200px; width: 200px;" />
</header>

<h1>Burgers!</h1>

<h2>Burgers to eat.</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have already been eaten.</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <textarea 
                id="burger" 
                name="burger_name" 
                placeholder="Enter the burger you want to add..." 
                maxlength="255"
            ></textarea>
        </div>
        <button type="submit">Add Burger!</button>
    </form>
</form>
