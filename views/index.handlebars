<h1 style="text-align: center;">Borger</h1>
<main>
  <div class="container">
    <div class="row">
      <div>
        <h2>Eat This Burger:</h2>
        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="/{{this.id}}" method="POST">
              <input type="hidden" name="devour">
              <button class="btn btn-dark" type="submit">Devour</button>
              {{!-- <button class="delete-burger" data-id="{{this.id}}">Delete</button> --}}
            </form>
          </li>
          {{/unless}} {{/each}}
        </ul>
      </div>
    </div>
    <img src="assets/img/burger.png" class="rounded mx-auto d-block" style="height: 100px;" width="150px">

    <div>
      <div>
        <h2>Eaten burgers: </h2>
        <ul>
          {{#each burgers}}
          {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
          {{/if}} {{/each}}
        </ul>
      </div>
    </div>

  </div>
</main>
<h3 style="text-align: center;">Add a Burger To The Menu</h3>
<div class="d-flex justify-content-center align-items-center container ">
  <form class="col-lg-6 offset-lg-3" method="POST">
    <div class="row">
      <input type="text" id="name" class="form-control" name="burger_name" placeholder="Enter your burger here!">
      <button type="submit" class="btn btn-dark">Add Burger</button>
    </div>
  </form>
</div>